= turbo_frame_tag @book_list do
  = simple_form_for @entry, url: book_list_entries_path(@book_list), class: 'flex items-end gap-md' do |f|
    = f.simple_fields_for(@entry.book) do |ff|
      = ff.hidden_field :user_id
      = ff.input :title
      = ff.input :author

    - if @book_list.read?
      = f.input :read_at, label: 'Date Read', as: :date, value: Time.zone.today

    = f.submit 'Add', class: 'btn btn--primary margin-bottom-sm'
